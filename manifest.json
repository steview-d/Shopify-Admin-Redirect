{
  "manifest_version": 3,
  "name": "Shopify Admin Redirect",
  "version": "1.0",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_icon": "shopify_icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "web_accessible_resources": [{
    "resources": ["url_builder.js"],
    "matches": ["<all_urls>"]
  }]
}
